	<columns name="zigly_groomerreview_groomerreview_columns">
		<settings>
			<childDefaults>
				<param name="fieldAction" xsi:type="array">
					<item name="provider" xsi:type="string">zigly_groomerreview_groomerreview_listing.zigly_groomerreview_groomerreview_listing.zigly_groomerreview_groomerreview_columns_editor</item>
					<item name="target" xsi:type="string">startEdit</item>
					<item name="params" xsi:type="array">
						<item name="0" xsi:type="string">${ $.$data.rowIndex }</item>
						<item name="1" xsi:type="boolean">true</item>
					</item>
				</param>
			</childDefaults>
		</settings>
		<!-- <selectionsColumn name="ids">
			<settings>
				<indexField>groomerreview_id</indexField>
			</settings>
		</selectionsColumn>
		<column name="groomerreview_id">
			<settings>
				<filter>text</filter>
				<sorting>asc</sorting>
				<label translate="true">ID</label>
			</settings>
