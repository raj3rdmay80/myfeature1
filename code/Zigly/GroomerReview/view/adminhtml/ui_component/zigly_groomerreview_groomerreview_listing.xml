		<column name="groomer_name">
			<settings>
				<filter>text</filter>
				<label translate="true">Professional</label>
			</settings>
		</column>
		<column name="service">
			<settings>
				<filter>text</filter>
				<label translate="true">Service</label>
			</settings>
		</column>
		<column name="plan">
			<settings>
				<filter>text</filter>
				<label translate="true">Plan</label>
			</settings>
		</column>
		<column name="order_id">
			<settings>
				<filter>text</filter>
				<label translate="true">Order Id</label>
			</settings>
		</column>
		<column name="customer_name">
			<settings>
				<filter>text</filter>
				<label translate="true">Customer</label>
			</settings>
		</column>
		<column name="star_rating">
			<settings>
				<filter>text</filter>
				<sorting>asc</sorting>
				<label translate="true">Star Rating</label>
			</settings>
		</column>

		<column name="tag_name">
			<settings>
				<filter>text</filter>
				<label translate="true">Tags</label>
				<editor>
					<editorType>text</editorType>
					<validation>
						<rule name="required-entry" xsi:type="boolean">false</rule>
					</validation>
				</editor>
			</settings>
		</column>
		<column name="is_active">
			<argument name="data" xsi:type="array">
				<item name="options" xsi:type="object">Zigly\GroomerReview\Ui\Component\Listing\Column\Status</item>
				<item name="config" xsi:type="array">
					<item name="filter" xsi:type="string">select</item>
					<item name="label" xsi:type="string" translate="true">Status</item>
					<item name="component" xsi:type="string">Magento_Ui/js/grid/columns/select</item>
					<item name="dataType" xsi:type="string">select</item>
					<item name="editor" xsi:type="array">
						<item name="editorType" xsi:type="string">select</item>
						<item name="validation" xsi:type="array">
							<item name="required-entry" xsi:type="boolean">false</item>
						</item>
					</item>
				</item>
			</argument>
		</column>
		<column name="created_at" class="Magento\Ui\Component\Listing\Columns\Date" >
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="filter" xsi:type="string">dateRange</item>
					<item name="component" xsi:type="string">Magento_Ui/js/grid/columns/date</item>
					<item name="dataType" xsi:type="string">date</item>
					<item name="label" xsi:type="string" translate="true">Created</item>
				</item>
			</argument>
		</column>
		<actionsColumn name="actions" class="Zigly\GroomerReview\Ui\Component\Listing\Column\GroomerReviewActions">
			<settings>
				<indexField>groomerreview_id</indexField>
				<resizeEnabled>false</resizeEnabled>
				<resizeDefaultWidth>107</resizeDefaultWidth>
			</settings>
		</actionsColumn>
	</columns>
</listing>
