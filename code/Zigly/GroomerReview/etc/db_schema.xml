<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
	<table name="zigly_groomerreview_groomerreview" resource="default" engine="innodb" comment="zigly_groomerreview_groomerreview Table">
		<column xsi:type="smallint" name="groomerreview_id" padding="6" unsigned="true" nullable="false" identity="true" comment="Entity Id"/>
		<constraint xsi:type="primary" referenceId="PRIMARY">
			<column name="groomerreview_id"/>
		</constraint>
	        <column xsi:type="int" name="service_id" padding="6" unsigned="false" nullable="false" identity="false" comment="Service Id"/>
		<column name="star_rating" nullable="true" xsi:type="smallint" comment="star rating"/>
		<column xsi:type="smallint" name="groomer_id" padding="10" unsigned="true" nullable="true" identity="false"
            comment="groomer_id"/>
		<column name="tag_name" nullable="true" xsi:type="varchar" comment="tag name" length="255"/>
		<column name="type" nullable="true" xsi:type="varchar" comment="type" length="255"/>
		<column name="description" nullable="true" xsi:type="varchar" comment="comment" length="255"/>
		<column name="rating" nullable="true" xsi:type="varchar" comment="Rating" length="255"/>
		<column name="is_active" default= "0" nullable="true" xsi:type="varchar" comment="is active" length="255"/>
		<column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
		<column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP" comment="Updated At"/>
		<index referenceId="ZIGLY_GROOMERREVIEW_GROOMERREVIEW_TAG_NAME_IS_ACTIVE" indexType="fulltext">		
			<column name="tag_name" />
			<column name="is_active" />
		</index>
	</table>
</schema>
