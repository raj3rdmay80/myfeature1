<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/orders/cancel" method="POST">
        <service class="Zigly\MobileAPIs\Api\OrderManagementInterface" method="orderCancel"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
	<route url="/V1/orders/cancelReason" method="GET">
        <service class="Zigly\MobileAPIs\Api\OrderManagementInterface" method="cancelReason"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
	<route url="/V1/orders/cancelbooking" method="POST">
        <service class="Zigly\MobileAPIs\Api\BookingCancelStatusInterface" method="bookingCancel"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
	<route url="/V1/customer/sendmail" method="POST">
        <service class="Zigly\MobileAPIs\Api\PrescriptionEmailInterface" method="sendMail"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>		
	<route url="/V1/customer/getwalletdetails" method="POST">        
		<service class="Zigly\MobileAPIs\Api\WalletDetailsInterface" method="walletDetails"/>        
		<resources>            
			<resource ref="anonymous"/>        
		</resources>    
	</route>
	<route url="/V1/customer/addmoneytowallet" method="POST">        
		<service class="Zigly\MobileAPIs\Api\WalletDetailsInterface" method="addMoney"/>        
		<resources>            
			<resource ref="anonymous"/>        
		</resources>    
	</route>
	<route url="/V1/customer/applywallet" method="POST">        
		<service class="Zigly\MobileAPIs\Api\WalletTransactionInterface" method="iswalletapplied"/>        
		<resources>            
			<resource ref="anonymous"/>        
		</resources>    
	</route>
	<route url="/V1/customer/walletstatus" method="POST">        
		<service class="Zigly\MobileAPIs\Api\WalletDetailsInterface" method="walletStatus"/>        
		<resources>            
			<resource ref="anonymous"/>        
		</resources>    
	</route>
	
	<route url="/V1/customer/feedbackmessage" method="POST">        
		<service class="Zigly\MobileAPIs\Api\FeedbackMessageInterface" method="feedbackMessage"/>        
		<resources>            
			<resource ref="anonymous"/>        
		</resources>    
	</route>
</routes>
