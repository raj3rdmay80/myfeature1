<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="zigly" translate="label" sortOrder="10">
            <label>Zigly</label>
        </tab>
        <section id="status_notify" translate="label" sortOrder="140" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Professional Notification</label>
            <tab>zigly</tab>
            <resource>Zigly_ProfessionalGraphQl::professionalGraphQl_config</resource>
            <group id="status" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Professional Configuration</label>
                <field id="professional_status_sender_name" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Service Provider Sender Name</label>
                    <validate>required-entry</validate>
                </field>
                <field id="professional_detail_template_id" translate="label" type="text" sortOrder="3" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Service Provider Detail Submission Sms Templateid</label>
                    <validate>required-entry</validate>
                </field>
                <field id="professional_detail_email" translate="label comment" type="select" sortOrder="4" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Service Provider Detail Submission Email Template</label>
                    <source_model>Magento\Config\Model\Config\Source\Email\Template</source_model>
                </field>
                <field id="professional_approve_sms" translate="label" type="text" sortOrder="7" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Service Provider Profile Approved Sms Templateid</label>
                    <validate>required-entry</validate>
                </field>
                <field id="professional_approve_email" translate="label comment" type="select" sortOrder="8" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Service Provider Profile Approved Email Template</label>
                    <source_model>Magento\Config\Model\Config\Source\Email\Template</source_model>
                </field>
            </group>
        </section>
    </system>
</config>