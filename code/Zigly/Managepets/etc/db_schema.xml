<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
   <table name="zigly_managepets" resource="default" engine="innodb" comment="Zigly Managepets">
      <column xsi:type="int" name="entity_id" padding="6" unsigned="false" nullable="false" identity="true" comment="Entity Id" />
      <column xsi:type="varchar" name="name" nullable="false" length="255" comment="Name" />
      <column xsi:type="varchar" name="type" nullable="false" length="255" comment="Type" />
      <column xsi:type="int" name="gender" unsigned="true" nullable="false" default="0" comment="Gender"/>
      <column xsi:type="varchar" name="breed" nullable="false" length="255" comment="Breed" />
      <column xsi:type="datetime" name="pet_dob" on_update="false" nullable="true" comment="pet Dob"/>
       <column xsi:type="int" name="age_year" unsigned="true" nullable="false" default="0" comment="Age Year"/>
       <column xsi:type="int" name="age_month" unsigned="true" nullable="false" default="0" comment="Age Month"/>
       <column xsi:type="text" name="filepath" nullable="true" comment="Filepath"/>
       <column xsi:type="int" name="customer_id" unsigned="true" nullable="false" default="0" comment="Customer Id"/>
       <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Updated At"/>
      <constraint xsi:type="primary" referenceId="PRIMARY">
         <column name="entity_id" />
      </constraint>
   </table>
</schema>
