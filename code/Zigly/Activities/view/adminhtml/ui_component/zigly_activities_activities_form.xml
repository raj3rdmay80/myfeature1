<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">zigly_activities_activities_form.activities_form_data_source</item>
		</item>
		<item name="label" xsi:type="string" translate="true">General Information</item>
		<item name="template" xsi:type="string">templates/form/collapsible</item>
	</argument>
	<settings>
		<buttons>
			<button name="back" class="Zigly\Activities\Block\Adminhtml\Activities\Edit\BackButton"/>
			<button name="delete" class="Zigly\Activities\Block\Adminhtml\Activities\Edit\DeleteButton"/>
			<button name="status" class="Zigly\Activities\Block\Adminhtml\Activities\Edit\StatusButton"/>
			<button name="save" class="Zigly\Activities\Block\Adminhtml\Activities\Edit\SaveButton"/>
			<button name="save_and_continue" class="Zigly\Activities\Block\Adminhtml\Activities\Edit\SaveAndContinueButton"/>
		</buttons>
		<namespace>zigly_activities_activities_form</namespace>
		<dataScope>data</dataScope>
		<deps>
			<dep>zigly_activities_activities_form.activities_form_data_source</dep>
		</deps>
	</settings>
	<dataSource name="activities_form_data_source">
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
		<settings>
			<submitUrl path="*/*/save"/>
		</settings>
		<dataProvider name="activities_form_data_source" class="Zigly\Activities\Model\Activities\DataProvider">
			<settings>
				<requestFieldName>activities_id</requestFieldName>
				<primaryFieldName>activities_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<fieldset name="general">
		<settings>
			<label></label>
		</settings>
		<field name="activity_name" formElement="input" sortOrder="10">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Activities</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Activity Name</label>
				<dataScope>activity_name</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">true</rule>
					<rule name="validate-alphanum-with-spaces" xsi:type="boolean">true</rule>
					<rule name="min_text_length" xsi:type="number">2</rule>
					<rule name="max_text_length" xsi:type="number">225</rule>
				</validation>
			</settings>
		</field>
		<field name="description" sortOrder="20" formElement="wysiwyg" template="ui/form/field">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">page</item>
					<item name="wysiwygConfigData" xsi:type="array">
						<item name="is_pagebuilder_enabled" xsi:type="boolean">false</item>
						<item name="toggle_button" xsi:type="boolean">true</item>
						<item name="height" xsi:type="string">200px</item>
						<item name="add_variables" xsi:type="boolean">true</item>
						<item name="add_widgets" xsi:type="boolean">true</item>
						<item name="add_images" xsi:type="boolean">true</item>
						<item name="add_directives" xsi:type="boolean">true</item>
					</item>
				</item>
			</argument>
			<settings>
				<label translate="true">Description</label>
				<dataScope>description</dataScope>
			</settings>
			<formElements>
				<wysiwyg>
					<settings>
						<rows>5</rows>
						<wysiwyg>true</wysiwyg>
					</settings>
				</wysiwyg>
			</formElements>
		</field>
		<field name="species" formElement="select" sortOrder="30">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Activities</item>
				</item>
			</argument>
			<settings>
				<dataType>select</dataType>
				<label translate="true">Select Breed</label>
				<dataScope>species</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">true</rule>
				</validation>
			</settings>
			<formElements>
				<select>
					<settings>
						<options class="Zigly\Activities\Model\Species"/>
						<caption translate="true">-- Please Select --</caption>
					</settings>
				</select>
			</formElements>
		</field>
		<fieldset name="small">
			<settings>
				<collapsible>true</collapsible>
				<label>Small</label>
			</settings>
			<field name="small_price" formElement="input" sortOrder="40">
				<argument name="data" xsi:type="array">
					<item name="config" xsi:type="array">
						<item name="dataType" xsi:type="string">string</item>
						<item name="label" xsi:type="string" translate="true">Price (Rs)</item>
						<item name="formElement" xsi:type="string">input</item>
						<item name="source" xsi:type="string">Activities</item>
						<item name="dataScope" xsi:type="string">small_price</item>
						<item name="notice" xsi:type="string" translate="true">No need to include symbol</item>
						<item name="validation" xsi:type="array">
							<item name="required-entry" xsi:type="boolean">true</item>
							<item name="validate-number" xsi:type="boolean">true</item>
						</item>
					</item>
				</argument>
			</field>
			<field name="small_time" formElement="input" sortOrder="50">
				<argument name="data" xsi:type="array">
					<item name="config" xsi:type="array">
						<item name="dataType" xsi:type="string">string</item>
						<item name="label" xsi:type="string" translate="true">Time (Minutes)</item>
						<item name="formElement" xsi:type="string">input</item>
						<item name="source" xsi:type="string">Activities</item>
						<item name="dataScope" xsi:type="string">small_time</item>
						<item name="validation" xsi:type="array">
							<item name="required-entry" xsi:type="boolean">true</item>
							<item name="validate-number" xsi:type="boolean">true</item>
						</item>
					</item>
				</argument>
			</field>
		</fieldset>
		<fieldset name="medium">
			<settings>
				<collapsible>true</collapsible>
				<label>Medium</label>
			</settings>
			<field name="medium_price" formElement="input" sortOrder="60">
				<argument name="data" xsi:type="array">
					<item name="config" xsi:type="array">
						<item name="dataType" xsi:type="string">string</item>
						<item name="label" xsi:type="string" translate="true">Price (Rs)</item>
						<item name="formElement" xsi:type="string">input</item>
						<item name="source" xsi:type="string">Activities</item>
						<item name="dataScope" xsi:type="string">medium_price</item>
						<item name="notice" xsi:type="string" translate="true">No need to include symbol</item>
						<item name="validation" xsi:type="array">
							<item name="required-entry" xsi:type="boolean">true</item>
							<item name="validate-number" xsi:type="boolean">true</item>
						</item>
					</item>
				</argument>
			</field>
			<field name="medium_time" formElement="input" sortOrder="70">
				<argument name="data" xsi:type="array">
					<item name="config" xsi:type="array">
						<item name="dataType" xsi:type="string">string</item>
						<item name="label" xsi:type="string" translate="true">Time (Minutes)</item>
						<item name="formElement" xsi:type="string">input</item>
						<item name="source" xsi:type="string">Activities</item>
						<item name="dataScope" xsi:type="string">medium_time</item>
						<item name="validation" xsi:type="array">
							<item name="required-entry" xsi:type="boolean">true</item>
							<item name="validate-number" xsi:type="boolean">true</item>
						</item>
					</item>
				</argument>
			</field>
		</fieldset>
		<fieldset name="large">
			<settings>
				<collapsible>true</collapsible>
				<label>Large</label>
			</settings>
			<field name="large_price" formElement="input" sortOrder="80">
				<argument name="data" xsi:type="array">
					<item name="config" xsi:type="array">
						<item name="dataType" xsi:type="string">string</item>
						<item name="label" xsi:type="string" translate="true">Price (Rs)</item>
						<item name="formElement" xsi:type="string">input</item>
						<item name="source" xsi:type="string">Activities</item>
						<item name="dataScope" xsi:type="string">large_price</item>
						<item name="notice" xsi:type="string" translate="true">No need to include symbol</item>
						<item name="validation" xsi:type="array">
							<item name="required-entry" xsi:type="boolean">true</item>
							<item name="validate-number" xsi:type="boolean">true</item>
						</item>
					</item>
				</argument>
			</field>
			<field name="large_time" formElement="input" sortOrder="90">
				<argument name="data" xsi:type="array">
					<item name="config" xsi:type="array">
						<item name="dataType" xsi:type="string">string</item>
						<item name="label" xsi:type="string" translate="true">Time (Minutes)</item>
						<item name="formElement" xsi:type="string">input</item>
						<item name="source" xsi:type="string">Activities</item>
						<item name="dataScope" xsi:type="string">large_time</item>
						<item name="validation" xsi:type="array">
							<item name="required-entry" xsi:type="boolean">true</item>
							<item name="validate-number" xsi:type="boolean">true</item>
						</item>
					</item>
				</argument>
			</field>
		</fieldset>
		<fieldset name="extra_large">
			<settings>
				<collapsible>true</collapsible>
				<label>Extra Large</label>
			</settings>
			<field name="extra_large_price" formElement="input" sortOrder="90">
				<argument name="data" xsi:type="array">
					<item name="config" xsi:type="array">
						<item name="dataType" xsi:type="string">string</item>
						<item name="label" xsi:type="string" translate="true">Price (Rs)</item>
						<item name="formElement" xsi:type="string">input</item>
						<item name="source" xsi:type="string">Activities</item>
						<item name="dataScope" xsi:type="string">extra_large_price</item>
						<item name="notice" xsi:type="string" translate="true">No need to include symbol</item>
						<item name="validation" xsi:type="array">
							<item name="required-entry" xsi:type="boolean">true</item>
							<item name="validate-number" xsi:type="boolean">true</item>
						</item>
					</item>
				</argument>
			</field>
			<field name="extra_large_time" formElement="input" sortOrder="100">
				<argument name="data" xsi:type="array">
					<item name="config" xsi:type="array">
						<item name="dataType" xsi:type="string">string</item>
						<item name="label" xsi:type="string" translate="true">Time (Minutes)</item>
						<item name="formElement" xsi:type="string">input</item>
						<item name="source" xsi:type="string">Activities</item>
						<item name="dataScope" xsi:type="string">extra_large_time</item>
						<item name="validation" xsi:type="array">
							<item name="required-entry" xsi:type="boolean">true</item>
							<item name="validate-number" xsi:type="boolean">true</item>
						</item>
					</item>
				</argument>
			</field>
		</fieldset>
	</fieldset>
</form>