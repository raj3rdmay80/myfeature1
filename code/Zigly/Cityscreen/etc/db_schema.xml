<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
	<table name="zigly_cityscreen_cityscreen" resource="default" engine="innodb" comment="zigly_cityscreen_cityscreen Table">
		<column xsi:type="smallint" name="cityscreen_id" padding="6" unsigned="true" nullable="false" identity="true" comment="Entity Id"/>
		<constraint xsi:type="primary" referenceId="PRIMARY">
			<column name="cityscreen_id"/>
		</constraint>
		<column name="type" nullable="true" xsi:type="int" comment="type" identity="false"/>
		<column name="pincode" nullable="true" xsi:type="varchar" comment="pincode" length="512"/>
		<column name="city" nullable="true" xsi:type="varchar" comment="city" length="255"/>
		<column name="latitude" nullable="true" xsi:type="varchar" comment="lat"/>
		<column name="longitude" nullable="true" xsi:type="varchar" comment="long"/>
		<column name="is_active" nullable="true" xsi:type="smallint" comment="is_active"/>
		<column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
		<column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP" comment="Updated At"/>
		<index referenceId="ZIGLY_CITYSCREEN_CITYSCREEN_CITY_PINCODE" indexType="fulltext">
			<column name="city" />
			<column name="pincode" />
		</index>
	</table>
	<table name="quote" resource="checkout" engine="innodb" comment="Sales Flat Quote">
		<column name="city_screen" nullable="true" xsi:type="varchar" comment="cityScreen"/>
	</table>
</schema>
