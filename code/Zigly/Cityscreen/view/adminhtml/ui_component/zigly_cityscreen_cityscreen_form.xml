<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">zigly_cityscreen_cityscreen_form.cityscreen_form_data_source</item>
		</item>
		<item name="label" xsi:type="string" translate="true">General Information</item>
		<item name="template" xsi:type="string">templates/form/collapsible</item>
	</argument>
	<settings>
		<buttons>
			<button name="back" class="Zigly\Cityscreen\Block\Adminhtml\Cityscreen\Edit\BackButton"/>
			<button name="delete" class="Zigly\Cityscreen\Block\Adminhtml\Cityscreen\Edit\DeleteButton"/>
			<button name="save" class="Zigly\Cityscreen\Block\Adminhtml\Cityscreen\Edit\SaveButton"/>
			<button name="save_and_continue" class="Zigly\Cityscreen\Block\Adminhtml\Cityscreen\Edit\SaveAndContinueButton"/>
		</buttons>
		<namespace>zigly_cityscreen_cityscreen_form</namespace>
		<dataScope>data</dataScope>
		<deps>
			<dep>zigly_cityscreen_cityscreen_form.cityscreen_form_data_source</dep>
		</deps>
	</settings>
	<dataSource name="cityscreen_form_data_source">
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
		<settings>
			<submitUrl path="*/*/save"/>
		</settings>
		<dataProvider name="cityscreen_form_data_source" class="Zigly\Cityscreen\Model\Cityscreen\DataProvider">
			<settings>
				<requestFieldName>cityscreen_id</requestFieldName>
				<primaryFieldName>cityscreen_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<fieldset name="general">
		<settings>
			<label>City</label>
		</settings>
		<field name="type" formElement="select" sortOrder="10">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Cityscreen</item>
				</item>
			</argument>
			<settings>
				<switcherConfig>
					<rules>
						<rule name="0">
							<value>1</value>
							<actions>
								<action name="0">
									<target>zigly_cityscreen_cityscreen_form.zigly_cityscreen_cityscreen_form.general.city</target>
									<callback>hide</callback>
								</action>
							</actions>
						</rule>
						<rule name="1">
							<value>2</value>
							<actions>
								<action name="0">
									<target>zigly_cityscreen_cityscreen_form.zigly_cityscreen_cityscreen_form.general.city</target>
									<callback>show</callback>
								</action>
							</actions>
						</rule>
					</rules>
				<enabled>true</enabled>
				</switcherConfig>
				<dataType>select</dataType>
				<label translate="true">Type</label>
				<dataScope>type</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">true</rule>
				</validation>
			</settings>
			<formElements>
				<select>
					<settings>
						<options class="Zigly\Cityscreen\Model\Type"/>
					</settings>
				</select>
			</formElements>
		</field>
		<field name="city" formElement="input" sortOrder="20">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Cityscreen</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">City</label>
				<dataScope>city</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">true</rule>
				</validation>
			</settings>
		</field>
		<field name="pincode" formElement="input" sortOrder="30">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="dataType" xsi:type="string">string</item>
					<item name="label" xsi:type="string" translate="true">Pincode</item>
					<item name="formElement" xsi:type="string">input</item>
					<item name="source" xsi:type="string">Cityscreen</item>
					<item name="dataScope" xsi:type="string">pincode</item>
					<item name="validation" xsi:type="array">
						<item name="required-entry" xsi:type="boolean">true</item>
						<item name="validate-number" xsi:type="boolean">true</item>
						<item name="pincode-validation" xsi:type="number">6</item>
					</item>
				</item>
			</argument>
		</field>
		<field name="latitude" formElement="input" sortOrder="40">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Cityscreen</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Latitude</label>
				<dataScope>latitude</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
					<rule name="validate-number" xsi:type="boolean">true</rule>
				</validation>
			</settings>
		</field>
		<field name="longitude" formElement="input" sortOrder="50">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Cityscreen</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Longitude</label>
				<dataScope>longitude</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
					<rule name="validate-number" xsi:type="boolean">true</rule>
				</validation>
			</settings>
		</field>
		<field name="is_active" formElement="select" sortOrder="60">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Cityscreen</item>
				</item>
			</argument>
			<settings>
				<dataType>select</dataType>
				<label translate="true">Is Active</label>
				<dataScope>is_active</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">true</rule>
				</validation>
			</settings>
			<formElements>
				<select>
					<settings>
						<options class="Zigly\Cityscreen\Model\Status"/>
					</settings>
				</select>
			</formElements>
		</field>
	</fieldset>
</form>
