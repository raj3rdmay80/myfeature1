<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">zigly_groomingservice_grooming_view.grooming_view_data_source</item>
		</item>
		<item name="label" xsi:type="string" translate="true">General Information</item>
		<item name="template" xsi:type="string">templates/form/collapsible</item>
	</argument>
	<settings>
		<buttons>
			<button name="back" class="Zigly\GroomingService\Block\Adminhtml\Grooming\Edit\BackButton"/>
			<button name="cancel_service" class="Zigly\GroomingService\Block\Adminhtml\Grooming\Edit\CancelButton"/>
			<button name="reschedule_service" class="Zigly\GroomingService\Block\Adminhtml\Grooming\Edit\RescheduleButton"/>
			<button name="add_groomer" class="Zigly\GroomingService\Block\Adminhtml\Grooming\Edit\AddGroomerButton"/>
		</buttons>
		<namespace>zigly_groomingservice_grooming_view</namespace>
		<dataScope>data</dataScope>
		<deps>
			<dep>zigly_groomingservice_grooming_view.grooming_view_data_source</dep>
		</deps>
	</settings>
	<dataSource name="grooming_view_data_source">
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
		<settings>
			<submitUrl path="*/*/next"/>
		</settings>
		<dataProvider name="grooming_view_data_source" class="Zigly\GroomingService\Model\Grooming\DataProvider">
			<settings>
				<requestFieldName>entity_id</requestFieldName>
				<primaryFieldName>entity_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<fieldset name="general">
		<settings>
			<label></label>
		</settings>
        <modal name="zigly_add_groomer_listing_modal" component="Zigly_GroomingService/js/modal/component">
            <settings>
                <options>
                    <option name="title" xsi:type="string">Add Groomer</option>
                    <option name="buttons" xsi:type="array">
	                    <item name="0" xsi:type="array">
	                        <item name="text" xsi:type="string">Done</item>
	                        <item name="class" xsi:type="string">action-primary</item>
	                        <item name="actions" xsi:type="array">
	                            <item name="0" xsi:type="string">saveData</item>
	                        </item>
	                    </item>
	                </option>
                </options>
            </settings>
            <insertListing name="zigly_add_groomer_listing" >
	            <settings>
	                <dataLinks>
	                    <exports>false</exports>
	                    <imports>true</imports>
	                </dataLinks>
	                <autoRender>true</autoRender>
	                <selectionsProvider>
	                    zigly_add_groomer_listing.zigly_add_groomer_listing.columns.ids
	                </selectionsProvider>
	                <dataScope>zigly_add_groomer_listing</dataScope>
	                <ns>zigly_add_groomer_listing</ns>
	            </settings>
	        </insertListing>
        </modal>
		<htmlContent name="grooming_service_view">
			<argument name="block" xsi:type="object">Zigly\GroomingService\Block\Adminhtml\Grooming</argument>
		</htmlContent>
	</fieldset>
</form>
