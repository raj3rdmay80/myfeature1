<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">zigly_hub_hub_form.hub_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">General Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="back" class="Zigly\Hub\Block\Adminhtml\Hub\Edit\BackButton"/>
            <button name="delete" class="Zigly\Hub\Block\Adminhtml\Hub\Edit\DeleteButton"/>
            <button name="status" class="Zigly\Hub\Block\Adminhtml\Hub\Edit\StatusButton"/>
            <button name="save" class="Zigly\Hub\Block\Adminhtml\Hub\Edit\SaveButton"/>
            <button name="save_and_continue" class="Zigly\Hub\Block\Adminhtml\Hub\Edit\SaveAndContinueButton"/>
        </buttons>
        <namespace>zigly_hub_hub_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>zigly_hub_hub_form.hub_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="hub_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="*/*/save"/>
        </settings>
        <dataProvider name="hub_form_data_source" class="Zigly\Hub\Model\Hub\DataProvider">
            <settings>
                <requestFieldName>hub_id</requestFieldName>
                <primaryFieldName>hub_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label></label>
        </settings>
        <field name="location" formElement="input" sortOrder="10">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Hub</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Location</label>
                <dataScope>location</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="city" formElement="input" sortOrder="20">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Hub</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">City</label>
                <dataScope>city</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="street_one" formElement="input" sortOrder="30">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Hub</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Street 1</label>
                <dataScope>street_one</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
            </settings>
        </field>
        <field name="street_two" formElement="input" sortOrder="40">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Hub</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Street 2</label>
                <dataScope>street_two</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
            </settings>
        </field>
        <field name="region_id" component="Magento_Ui/js/form/element/ui-select" formElement="select" sortOrder="50">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Hub</item>
                    <item name="filterOptions" xsi:type="boolean">true</item>
                    <item name="multiple" xsi:type="boolean">false</item>
                    <item name="showCheckbox" xsi:type="boolean">true</item>
                    <item name="disableLabel" xsi:type="boolean">true</item>
                    <item name="levelsVisibility" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <dataType>select</dataType>
                <elementTmpl>ui/grid/filters/elements/ui-select</elementTmpl>
                <label translate="true">State</label>
                <dataScope>region_id</dataScope>
                <componentType>field</componentType>
                <listens>
                    <link name="${ $.namespace }.${ $.namespace }:responseData">setParsed</link>
                </listens>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Zigly\Groomer\Model\State"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <!-- <field name="pincode" formElement="input" sortOrder="60">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Hub</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Pincode</label>
                <dataScope>pincode</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field> -->
        <field name="pincode" formElement="input" sortOrder="60">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="dataType" xsi:type="string">text</item>
                        <item name="label" xsi:type="string" translate="true">Pincode</item>
                        <item name="formElement" xsi:type="string">textarea</item>
                        <item name="cols" xsi:type="number">15</item>
                        <item name="rows" xsi:type="number">4</item>
                        <item name="source" xsi:type="string">Hub</item>
                        <item name="dataScope" xsi:type="string">pincode</item>
                        <item name="notice" xsi:type="string" translate="true">For multiple pincode please use comma separator. Eg: 110001,110002</item>
                        <item name="validation" xsi:type="array">
                            <item name="required-entry" xsi:type="boolean">true</item>
                        </item>
                    </item>
                </argument>
            </field>
        <field name="latitude" formElement="input" sortOrder="70">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Hub</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Latitude</label>
                <dataScope>latitude</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="longitude" formElement="input" sortOrder="80">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Hub</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Longitude</label>
                <dataScope>longitude</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="availability_info" formElement="input" sortOrder="90">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="label" xsi:type="string" translate="true">Availability Info</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">Hub</item>
                    <item name="dataScope" xsi:type="string">availability_info</item>
                    <item name="notice" xsi:type="string" translate="true">Eg: 07:00 AM to 07:00 PM</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">false</item>
                        <item name="max_text_length" xsi:type="number">20</item>
                    </item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>
