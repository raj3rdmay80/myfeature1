<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">zigly_schedulemanagementapi_groomingslottable_form.groomingslottable_form_data_source</item>
		</item>
		<item name="label" xsi:type="string" translate="true">General Information</item>
		<item name="template" xsi:type="string">templates/form/collapsible</item>
	</argument>
	<settings>
		<buttons>
			<button name="back" class="Zigly\ScheduleManagementApi\Block\Adminhtml\GroomingSlotTable\Edit\BackButton"/>
			<button name="delete" class="Zigly\ScheduleManagementApi\Block\Adminhtml\GroomingSlotTable\Edit\DeleteButton"/>
			<button name="save" class="Zigly\ScheduleManagementApi\Block\Adminhtml\GroomingSlotTable\Edit\SaveButton"/>
			<button name="save_and_continue" class="Zigly\ScheduleManagementApi\Block\Adminhtml\GroomingSlotTable\Edit\SaveAndContinueButton"/>
		</buttons>
		<namespace>zigly_schedulemanagementapi_groomingslottable_form</namespace>
		<dataScope>data</dataScope>
		<deps>
			<dep>zigly_schedulemanagementapi_groomingslottable_form.groomingslottable_form_data_source</dep>
		</deps>
	</settings>
	<dataSource name="groomingslottable_form_data_source">
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
		<settings>
			<submitUrl path="*/*/save"/>
		</settings>
		<dataProvider name="groomingslottable_form_data_source" class="Zigly\ScheduleManagementApi\Model\GroomingSlotTable\DataProvider">
			<settings>
				<requestFieldName>slot_id</requestFieldName>
				<primaryFieldName>slot_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<fieldset name="general">
		<settings>
			<label>General</label>
		</settings>
		<field name="hub_id" formElement="select" sortOrder="40">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">GroomingSlotTable</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">HUB NAME</label>
				<dataScope>hub_id</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
			<formElements>
			<select>
			    <settings>
			        <options class="Zigly\ScheduleManagementApi\Model\GroomingHub\Source\Huboption"/>
			        <caption translate="true">-- Please Select --</caption>
			    </settings>
			</select>
			</formElements>
		</field>
		<field name="date">
		    <argument name="data" xsi:type="array">
		        <item name="config" xsi:type="array">
		            <item name="dataType" xsi:type="string">string</item>
		            <item name="label" xsi:type="string" translate="true">Date</item>
		            <item name="formElement" xsi:type="string">date</item>
		            <item name="source" xsi:type="string">page</item>
		            <item name="sortOrder" xsi:type="number">50</item>
		            <item name="dataScope" xsi:type="string">date</item>
		            <item name="validation" xsi:type="array">
		                <item name="required-entry" xsi:type="boolean">true</item>
		            </item>
		            <item name="options" xsi:type="array">
		                <item name="dateFormat" xsi:type="string">yyyy-MM-dd</item>
		                <item name="showsTime" xsi:type="boolean">true</item>
		            </item>
		            <item name="storeTimeZone" xsi:type="string">string</item>
		        </item>
		    </argument>
		</field>

		<field name="slot_start_time" formElement="input" sortOrder="60">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">GroomingSlotTable</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Start Time</label>
				<dataScope>slot_start_time</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field name="slot_end_time" formElement="input" sortOrder="70">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">GroomingSlotTable</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">End Time</label>
				<dataScope>slot_end_time</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field name="allowed_booking" formElement="select" sortOrder="90">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">GroomingSlotTable</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Allowed Booking</label>
				<dataScope>allowed_booking</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
			<formElements>
			  	<select>
					<settings>
						<options class="Zigly\ScheduleManagementApi\Model\Status"/>
					</settings>
				</select>
			</formElements>
		</field>
		<field name="status" formElement="select" sortOrder="100">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">GroomingSlotTable</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Status</label>
				<dataScope>status</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
            <formElements>
			  	<select>
					<settings>
						<options class="Zigly\ScheduleManagementApi\Model\Status"/>
					</settings>
				</select>
			</formElements>
		</field>
	</fieldset>
</form>
