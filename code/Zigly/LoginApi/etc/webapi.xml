<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/customer/sendotp" method="POST">
        <service class="Zigly\LoginApi\Api\LoginRepositoryInterface" method="sendOtp"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/customer/resendotp" method="POST">
        <service class="Zigly\LoginApi\Api\LoginRepositoryInterface" method="resendOtp"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/customer/login" method="POST">
        <service class="Zigly\LoginApi\Api\LoginRepositoryInterface" method="customerLogin"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/customer/create" method="POST">
        <service class="Zigly\LoginApi\Api\LoginRepositoryInterface" method="createCustomer"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/customer/revoke" method="POST">
        <service class="Zigly\LoginApi\Api\LoginRepositoryInterface" method="revokeCustomerAccessToken"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>