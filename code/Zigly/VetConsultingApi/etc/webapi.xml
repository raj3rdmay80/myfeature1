            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="GET" url="/V1/vetconsulting/timeslots">
        <service class="Zigly\VetConsultingApi\Api\VetConsultingTimeSlotsRepositoryInterface" method="getTimeSlotsVetConsulting"/>
