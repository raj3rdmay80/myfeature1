<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
	<table name="zigly_couponservice_couponservice" resource="default" engine="innodb" comment="zigly_couponservice_couponservice Table">
		<column xsi:type="smallint" name="couponservice_id" padding="6" unsigned="true" nullable="false" identity="true" comment="Entity Id"/>
		<constraint xsi:type="primary" referenceId="PRIMARY">
			<column name="couponservice_id"/>
		</constraint>
		<column name="name" nullable="true" xsi:type="varchar" comment="name" length="255"/>
		<column name="start_date" nullable="true" xsi:type="datetime" comment="start_date"/>
		<column name="end_date" nullable="true" xsi:type="datetime" comment="end_date"/>
		<column name="description" nullable="true" xsi:type="varchar" comment="description" length="255"/>
		<column name="coupon_code" nullable="true" xsi:type="varchar" comment="coupon_code" length="255"/>
		<column name="amount" nullable="true" xsi:type="int" comment="amount" identity="false"/>
		<column name="center" nullable="true" xsi:type="smallint" comment="center"/>
		<column name="type" nullable="true" xsi:type="smallint" comment="type"/>
		<column name="status" nullable="true" xsi:type="smallint" comment="status"/>
		<column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
		<column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP" comment="Updated At"/>
		<index referenceId="ZIGLY_COUPONSERVICE_COUPONSERVICE_NAME_COUPON_CODE" indexType="fulltext">
			<column name="name" />
			<column name="coupon_code" />
		</index>
	</table>
</schema>
