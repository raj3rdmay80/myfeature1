<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="zigly_wallet_wallet" resource="default" engine="innodb" comment="zigly_wallet_wallet Table">
        <column xsi:type="smallint" name="wallet_id" padding="6" unsigned="true" nullable="false" identity="true" comment="Entity Id"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="wallet_id"/>
        </constraint>
        <column name="comment" nullable="true" xsi:type="varchar" comment="comment" length="255"/>
        <column name="amount" nullable="true" xsi:type="smallint" comment="amount"/>
        <column name="flag" nullable="true" xsi:type="smallint" comment="flag"/>
        <column name="performed_by" nullable="true" xsi:type="varchar" comment="performed by" length="255"/>
        <column name="customer_id" nullable="true" xsi:type="varchar" comment="customer id" length="255"/>
        <column name="transaction_id" nullable="true" xsi:type="varchar" comment="transaction id" length="255"/>
        <column name="visibility" nullable="false" default="0" xsi:type="smallint" comment="visibility"/>
        <column name="created_at" nullable="false" xsi:type="timestamp" comment="created_at" default="CURRENT_TIMESTAMP"/>
        <column name="updated_at" nullable="true" xsi:type="timestamp" comment="updated_at" default="CURRENT_TIMESTAMP"/>
        <index referenceId="ZIGLY_WALLET_WALLET_COMMENT" indexType="fulltext">
            <column name="comment" />
        </index>
    </table>
    <table name="quote" resource="checkout" engine="innodb" comment="Sales Flat Quote">
        <column name="zwallet" nullable="true" xsi:type="varchar" comment="Wallet"/>
        <column name="wallet_item_cancel" nullable="true" xsi:type="varchar" comment="item cancel" length="255"/>
        <column name="order_type" nullable="true" xsi:type="varchar" default="1" comment="Order Type"/>
    </table>
    <table name="sales_order" resource="sales" engine="innodb" comment="Sales Flat Order">
        <column name="zwallet" nullable="true" xsi:type="varchar" comment="Wallet"/>
        <column name="cashback" nullable="true" xsi:type="varchar" comment="Cashback Calculated"/>
        <column name="cashback_applied" nullable="true" xsi:type="varchar" comment="Cashback Applied"/>
    </table>
</schema>
