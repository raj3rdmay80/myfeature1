<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">zigly_mobilehome_mobilehome_form.mobilehome_form_data_source</item>
		</item>
		<item name="label" xsi:type="string" translate="true">General Information</item>
		<item name="template" xsi:type="string">templates/form/collapsible</item>
	</argument>
	<settings>
		<buttons>
			<button name="back" class="Zigly\Mobilehome\Block\Adminhtml\Mobilehome\Edit\BackButton"/>
			<button name="delete" class="Zigly\Mobilehome\Block\Adminhtml\Mobilehome\Edit\DeleteButton"/>
			<button name="save" class="Zigly\Mobilehome\Block\Adminhtml\Mobilehome\Edit\SaveButton"/>
			<button name="save_and_continue" class="Zigly\Mobilehome\Block\Adminhtml\Mobilehome\Edit\SaveAndContinueButton"/>
		</buttons>
		<namespace>zigly_mobilehome_mobilehome_form</namespace>
		<dataScope>data</dataScope>
		<deps>
			<dep>zigly_mobilehome_mobilehome_form.mobilehome_form_data_source</dep>
		</deps>
	</settings>
	<dataSource name="mobilehome_form_data_source">
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
		<settings>
			<submitUrl path="*/*/save"/>
		</settings>
		<dataProvider name="mobilehome_form_data_source" class="Zigly\Mobilehome\Model\Mobilehome\DataProvider">
			<settings>
				<requestFieldName>mobilehome_id</requestFieldName>
				<primaryFieldName>mobilehome_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<fieldset name="general">
		<settings>
			<label>General</label>
		</settings>
