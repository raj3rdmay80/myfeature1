								<item name="label" xsi:type="string">Both</item>
							</option>
						</options>
						<caption translate="true">-- Please Select --</caption>
					</settings>
				</select>
			</formElements>
		</field>
		<field name="description" sortOrder="40" formElement="wysiwyg" template="ui/form/field">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
