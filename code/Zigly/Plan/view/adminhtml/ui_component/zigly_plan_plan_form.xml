<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">zigly_plan_plan_form.plan_form_data_source</item>
		</item>
		<item name="label" xsi:type="string" translate="true">General Information</item>
		<item name="template" xsi:type="string">templates/form/collapsible</item>
	</argument>
	<settings>
		<buttons>
			<button name="back" class="Zigly\Plan\Block\Adminhtml\Plan\Edit\BackButton"/>
			<button name="delete" class="Zigly\Plan\Block\Adminhtml\Plan\Edit\DeleteButton"/>
			<button name="status" class="Zigly\Plan\Block\Adminhtml\Plan\Edit\StatusButton"/>
			<button name="save" class="Zigly\Plan\Block\Adminhtml\Plan\Edit\SaveButton"/>
			<button name="save_and_continue" class="Zigly\Plan\Block\Adminhtml\Plan\Edit\SaveAndContinueButton"/>
		</buttons>
		<namespace>zigly_plan_plan_form</namespace>
		<dataScope>data</dataScope>
		<deps>
			<dep>zigly_plan_plan_form.plan_form_data_source</dep>
		</deps>
	</settings>
	<dataSource name="plan_form_data_source">
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
		<settings>
			<submitUrl path="*/*/save"/>
		</settings>
		<dataProvider name="plan_form_data_source" class="Zigly\Plan\Model\Plan\DataProvider">
			<settings>
				<requestFieldName>plan_id</requestFieldName>
				<primaryFieldName>plan_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<fieldset name="general">
		<settings>
			<label></label>
		</settings>
		<field name="recommended_plan" formElement="checkbox" sortOrder="10">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Species</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Recommended</label>
				<dataScope>recommended_plan</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="string">0</map>
                            <map name="true" xsi:type="string">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
		</field>
		<field name="species" formElement="select" sortOrder="10">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Plan</item>
				</item>
			</argument>
			<settings>
				<dataType>select</dataType>
				<disabled>1</disabled>
				<label translate="true">Selected Breed</label>
				<dataScope>species</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
			<formElements>
				<select>
					<settings>
						<options class="Zigly\Plan\Model\Breed"/>
					</settings>
				</select>
			</formElements>
		</field>
		<field name="plan_name" formElement="input" sortOrder="20">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Plan</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Plan Name</label>
				<dataScope>plan_name</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">true</rule>
					<rule name="validate-alphanum-with-spaces" xsi:type="boolean">true</rule>
					<rule name="min_text_length" xsi:type="number">2</rule>
					<rule name="max_text_length" xsi:type="number">50</rule>
				</validation>
			</settings>
		</field>
		<field name="plan_image" formElement="imageUploader" sortOrder="30">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Plan</item>
                </item>
            </argument>
            <settings>
                <elementTmpl>ui/form/element/uploader/image</elementTmpl>
                <dataType>string</dataType>
                <label translate="true">Plan Image</label>
                <visible>true</visible>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
            </settings>
            <formElements>
                <imageUploader>
                    <settings>
                        <required>true</required>
                        <uploaderConfig>
                            <param xsi:type="url" name="url" path="zigly_plan/plan_image/image"/>
                        </uploaderConfig>
                        <previewTmpl>Zigly_Plan/image-preview</previewTmpl>
                        <openDialogTitle>Media Gallery</openDialogTitle>
                        <allowedExtensions>jpg jpeg png</allowedExtensions>
                        <maxFileSize>5242880</maxFileSize>
                    </settings>
                </imageUploader>
            </formElements>
        </field>
        <field name="banner_image" formElement="imageUploader" sortOrder="30">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Plan</item>
                </item>
            </argument>
            <settings>
                <elementTmpl>ui/form/element/uploader/image</elementTmpl>
                <dataType>string</dataType>
                <label translate="true">Banner Image</label>
                <visible>true</visible>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
            <formElements>
                <imageUploader>
                    <settings>
                        <required>true</required>
                        <uploaderConfig>
                            <param xsi:type="url" name="url" path="zigly_plan/plan_image/banner"/>
                        </uploaderConfig>
                        <previewTmpl>Zigly_Plan/image-preview</previewTmpl>
                        <openDialogTitle>Media Gallery</openDialogTitle>
                        <allowedExtensions>jpg jpeg png</allowedExtensions>
                        <maxFileSize>5242880</maxFileSize>
                    </settings>
                </imageUploader>
            </formElements>
        </field>
		<field name="plan_type" formElement="select" sortOrder="30">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Plan</item>
				</item>
