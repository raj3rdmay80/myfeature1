<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
	<table name="zigly_plan_plan" resource="default" engine="innodb" comment="zigly_plan_plan Table">
		<column xsi:type="smallint" name="plan_id" padding="6" unsigned="true" nullable="false" identity="true" comment="Entity Id"/>
		<constraint xsi:type="primary" referenceId="PRIMARY">
			<column name="plan_id"/>
		</constraint>
		<column name="plan_name" nullable="true" xsi:type="varchar" comment="plan_name" length="255"/>
		<column name="recommended_plan" nullable="false" default="0" xsi:type="smallint" comment="recommended plan"/>
		<column name="plan_type" nullable="true" xsi:type="smallint" comment="plan_type"/>
		<column name="description" nullable="true" xsi:type="varchar" comment="description" length="512"/>
		<column name="plan_image" nullable="true" xsi:type="varchar" comment="Plan image" length="255"/>
		<column name="banner_image" nullable="true" xsi:type="varchar" comment="Plan banner image" length="255"/>
		<column name="applicable_cities" nullable="true" xsi:type="varchar" comment="applicable_cities" length="255"/>
		<column name="sort_order" nullable="true" xsi:type="int" comment="sort_order"/>
		<column name="plan_category" nullable="true" xsi:type="smallint" comment="plan_category"/>
		<column name="pre_defined" disabled="true" nullable="true" xsi:type="varchar" comment="pre_defined"  length="255"/>
		<column name="species" nullable="true" xsi:type="smallint" comment="species"/>
		<column name="activity" nullable="true" xsi:type="varchar" comment="activity" length="255"/>
		<column name="activity_description" disabled="true" nullable="true" xsi:type="varchar" comment="activity_description" length="512"/>
		<column name="small_price" nullable="true" xsi:type="varchar" comment="small price" length="30"/>
		<column name="small_discount_price" nullable="true" xsi:type="varchar" comment="small discount price" length="30"/>
		<column name="small_minimum_price" nullable="true" xsi:type="varchar" comment="small minimum price" length="30"/>
		<column name="small_time" nullable="true" xsi:type="varchar" comment="small time" length="30"/>
		<column name="medium_price" nullable="true" xsi:type="varchar" comment="medium price" length="30"/>
		<column name="medium_discount_price" nullable="true" xsi:type="varchar" comment="medium discount price" length="30"/>
		<column name="medium_minimum_price" nullable="true" xsi:type="varchar" comment="medium minimum price" length="30"/>
		<column name="medium_time" nullable="true" xsi:type="varchar" comment="medium time" length="30"/>
		<column name="large_price" nullable="true" xsi:type="varchar" comment="large price" length="30"/>
		<column name="large_discount_price" nullable="true" xsi:type="varchar" comment="large discount price" length="30"/>
		<column name="large_minimum_price" nullable="true" xsi:type="varchar" comment="large minimum price" length="30"/>
		<column name="large_time" nullable="true" xsi:type="varchar" comment="large time" length="30"/>
		<column name="extra_large_price" nullable="true" xsi:type="varchar" comment="extra large price" length="30"/>
		<column name="extra_large_discount_price" nullable="true" xsi:type="varchar" comment="extra large discount price" length="30"/>
		<column name="extra_large_minimum_price" nullable="true" xsi:type="varchar" comment="extra large minimum price" length="30"/>
		<column name="extra_large_time" nullable="true" xsi:type="varchar" comment="extra large time" length="30"/>
		<column name="product_sku" nullable="true" xsi:type="varchar" comment="product sku" length="255"/>
		<column name="status" nullable="true" xsi:type="smallint" comment="status"/>
		<column name="updated_by" nullable="true" xsi:type="varchar" comment="updated_by" length="255"/>
		<column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
		<column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP" comment="Updated At"/>
		<index referenceId="ZIGLY_PLAN_PLAN_PLAN_NAME_APPLICABLE_CITIES_UPDATED_BY" indexType="fulltext">
			<column name="plan_name" />
			<column name="applicable_cities" />
			<column name="updated_by" />
		</index>
	</table>
	<table name="sales_order" resource="sales" engine="innodb" comment="Sales Flat Order">
		<column name="order_type" nullable="false" xsi:type="varchar" default="1" comment="Order Type" length="255"/>
	</table>
</schema>
