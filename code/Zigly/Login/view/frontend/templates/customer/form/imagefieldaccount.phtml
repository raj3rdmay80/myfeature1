<fieldset class="fieldset file-upload">
    <div class="field customer_file_upload">
        <label for="customerprofile_image" class="label"><span><?php /* @escapeNotVerified */
        echo __('Select Profile Image') ?></span></label>
        <div class="control">
            <input type="file" onchange="image()" accept="image/*" name="customerprofile_image" id="customerprofile_image" title="<?php /* @escapeNotVerified */ echo __('Select Profile Image') ?>" class="input-text validate-fileextensions" data-validate="{required:false}">
