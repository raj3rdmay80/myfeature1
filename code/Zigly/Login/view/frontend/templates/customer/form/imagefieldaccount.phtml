        </div>
        <?php if ($url = $block->getFileUrl()): ?>
        <div class="field">
            <span class="delete-image">
                <input type="checkbox" id="customerprofile_image_delete" name="customerprofile_image[delete]"
                   class="checkbox">
                <label for="customerprofile_image_delete"><?= $block->escapeHtml(__('Delete Image')) ?></label>
            </span>
            <img src="<?php echo $url ?>" alt="image"/>
        </div>
        <?php endif;?>
    </div>
</fieldset>
<script type="text/javascript">
    function image() {
        document.getElementById('selected-profile-image').style.display = "block";
        document.getElementById('selected-profile-image').src = URL.createObjectURL(event.target.files[0]);
    }
</script>