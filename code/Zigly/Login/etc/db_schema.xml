<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
   <table name="zigly_otp_report" resource="default" engine="innodb" comment="Zigly Managepets">
      <column xsi:type="int" name="entity_id" padding="6" unsigned="false" nullable="false" identity="true" comment="Entity Id" />
      <column xsi:type="varchar" name="username" nullable="false" length="255" comment="Username" />
      <column xsi:type="text" name="request_id" nullable="true" comment="Request Id"/>
      <column xsi:type="text" name="user_id" nullable="true" comment="User Id"/>
      <column xsi:type="text" name="sender_id" nullable="true" comment="Sender Id"/>
      <column xsi:type="text" name="receiver" nullable="true" comment="Receiver"/>
      <column xsi:type="text" name="status" nullable="true" comment="Status"/>
      <column xsi:type="text" name="description" nullable="true" comment="Description"/>
      <column xsi:type="timestamp" name="msgdate" on_update="false" nullable="false" comment="Msgdate"/>
      <column xsi:type="int" name="otptype" unsigned="true" nullable="false" default="0" comment="Otptype"/>
      <column xsi:type="text" name="otpvalue" nullable="true" comment="Otpvalue"/>
      <column name="flag" nullable="false" default="0" xsi:type="smallint" comment="flag"/>
      <column xsi:type="int" name="otpfailedtime" nullable="true" comment="Otpfailedtime"/>      
      <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Created At"/>
      <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Updated At"/>
      <constraint xsi:type="primary" referenceId="PRIMARY">
         <column name="entity_id" />
      </constraint>
   </table>
   <table name="quote">
      <column name="gc_phone_number" nullable="true" xsi:type="varchar" length="255" comment="guest customer sign in phone number"/>
   </table>
</schema>
