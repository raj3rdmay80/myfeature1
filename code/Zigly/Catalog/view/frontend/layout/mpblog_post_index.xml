<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="mpblog_design"/>
    <body>
    	<referenceBlock name="page.main.title">
           <action method="setPageTitle">
              <argument translate="true" name="title" xsi:type="string">Browse All Articles</argument>
           </action>
        </referenceBlock>
        <referenceContainer name="div.sidebar.main" remove="true" />
        <referenceContainer name="content">
            <block class="Mageplaza\Blog\Block\Post\Listpost" name="mpblog.post.list" as="mpblog_post" template="Zigly_Catalog::post/list.phtml"/>
            <block class="Magento\Framework\View\Element\Template" name="mpblog.copy.right" after="-" template="Mageplaza_Blog::html/copyright.phtml"/>
        </referenceContainer>
    </body>
</page>

