<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="zigly_reviewtag_reviewtag" resource="default" engine="innodb" comment="zigly_reviewtag_reviewtag Table">
        <column xsi:type="smallint" name="reviewtag_id" padding="6" unsigned="true" nullable="false" identity="true" comment="Entity Id"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="reviewtag_id"/>
        </constraint>
        <column name="tag_name" nullable="true" xsi:type="varchar" comment="tag name" length="255"/>
        <column name="is_active" nullable="true" xsi:type="varchar" comment="is active" length="255"/>
        <column name="rating" nullable="true" xsi:type="varchar" comment="rating" length="255"/>
        <column name="type" nullable="true" xsi:type="varchar" comment="type" length="255"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP" comment="Updated At"/>
        <index referenceId="ZIGLY_REVIEWTAG_REVIEWTAG_TAGNAME_ISACTIVE_RATING_TYPE" indexType="fulltext">
            <column name="tag_name" />
            <column name="is_active" />
            <column name="rating" />
            <column name="type" />
        </index>
    </table>
    <table name="review_detail" resource="default" engine="innodb" comment="Review detail information">
        <column xsi:type="varchar" name="feedback_tag" nullable="true" length="550" comment="Feedback Tag"/>
    </table>
</schema>
