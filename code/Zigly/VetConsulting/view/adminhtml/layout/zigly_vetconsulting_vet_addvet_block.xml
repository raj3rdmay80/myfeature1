<?xml version="1.0" encoding="UTF-8"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="zigly_vetconsulting_vet_addvet_block.grid.container">
            <block class="Zigly\VetConsulting\Block\Adminhtml\Grid" name="zigly_vetconsulting_vet_addvet_block.grid" as="grid">
                <arguments>
                    <argument name="id" xsi:type="string">id</argument>
                    <argument name="dataSource" xsi:type="object">Zigly\VetConsulting\Model\ResourceModel\Vet\Collection</argument>
                    <argument name="default_sort" xsi:type="string">id</argument>
                    <argument name="default_dir" xsi:type="string">ASC</argument>
                    <argument name="save_parameters_in_session" xsi:type="boolean">true</argument>
                    <argument name="row_click_callback" xsi:type="string">groomers.gridRowClick</argument>
                </arguments>
                <block class="Magento\Backend\Block\Widget\Grid\ColumnSet" name="zigly_vetconsulting_vet_addvet_block.grid.columnSet" as="grid.columnSet">
                    <arguments>
                        <argument name="filter_visibility" xsi:type="string">1</argument>
                        <argument name="rowUrl" xsi:type="array">
                            <item name="path" xsi:type="string">zigly_groomingservice/grooming/savegroomer</item>
                            <item name="extraParamsTemplate" xsi:type="array">
                                <item name="groomer_id" xsi:type="string">getGroomerId</item>
                                <item name="schedulemanagement_id" xsi:type="string">getSchedulemanagementId</item>
                            </item>
                        </argument>
                    </arguments>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" name="adminhtml.grommer.grid.columnSet.grommer_id" as="grommer_id">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">ID</argument>
                            <argument name="index" xsi:type="string">groomer_id</argument>
                            <argument name="align" xsi:type="string">right</argument>
                            <argument name="type" xsi:type="string">text</argument>
                            <argument name="column_css_class" xsi:type="string">col-id</argument>
                            <argument name="header_css_class" xsi:type="string">col-id</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" name="adminhtml.grommer.grid.columnSet.name" as="name">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Name</argument>
                            <argument name="index" xsi:type="string">name</argument>
                            <argument name="type" xsi:type="string">text</argument>
                        </arguments>
                    </block>
                </block>
            </block>
        </referenceBlock>
    </body>
</page>