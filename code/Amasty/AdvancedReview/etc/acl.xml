                    </resource>
                </resource>
                <resource id="Magento_Backend::marketing">
                    <resource id="Magento_Backend::marketing_user_content">
                        <resource id="Amasty_AdvancedReview::reminder" title="Amasty Advanced Review Reminder" translate="title" sortOrder="30"/>
